{
	"name": "color-tool",
	"displayName": "Color tool",
	"description": "Color tool",
	"version": "0.0.1",
	"publisher": "tane",
	"repository": {},
	"engines": {
		"vscode": "^1.58.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:color-tool.display-colors",
		"onCommand:color-tool.refresh",
		"onView:sidebar"
	],
	"main": "./out/src/extension.js",
	"files": [
		"out"
	],
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "sidebar-view",
					"title": "Sidebar View",
					"icon": "assets/heart.svg"
				}
			]
		},
		"views": {
			"sidebar-view": [
				{
					"type": "webview",
					"id": "sidebar",
					"name": "Sidebar",
					"icon": "assets/heart.svg",
					"contextualTitle": "Sidebar contextual Title"
				}
			]
		},
		"commands": [
			{
				"command": "color-tool.display-colors",
				"title": "Rename Files and Folders",
				"category": "renamer"
			},
			{
				"command": "color-tool.refresh",
				"title": "Refresh",
				"category": "renamer"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "true",
					"command": "color-tool.display-colors"
				}
			],
			"commandPalette": [
				{
					"command": "color-tool.display-colors",
					"when": "true"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./ && cd svelte && npm run build",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"dev": "ts-node ./src/watch.ts",
		"package": "npm run compile && vsce package",
		"publish": "vsce publish"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^1.0.0-next.13",
		"@sveltejs/kit": "next",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "16.x",
		"@types/vscode": "^1.58",
		"@typescript-eslint/eslint-plugin": "^4.29.0",
		"@typescript-eslint/parser": "^4.29.0",
		"chokidar": "^3.5.2",
		"dart-sass": "^1.25.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.0",
		"glob": "^7.1.7",
		"mocha": "^9.0.3",
		"node-sass": "^6.0.1",
		"prettier": "~2.3.2",
		"prettier-plugin-svelte": "^2.3.1",
		"svelte": "^3.41.0",
		"svelte-check": "^2.2.4",
		"svelte-preprocess": "^4.7.4",
		"ts-node": "^10.1.0",
		"tsconfig-paths": "^3.10.1",
		"tslib": "^2.3.0",
		"typescript": "^4.4.0-beta",
		"vsce": "^1.96.1",
		"vscode-test": "^1.6.1"
	},
	"dependencies": {
		"fast-diff": "^1.2.0",
		"rxjs": "^7.3.0"
	}
}
