{
	"name": "color-picker",
	"description": "Color picker",
	"repository": {
		"type": "git",
		"url": "https://github.com"
	},
	"author": "Tane",
	"license": "MIT",
	"version": "1.0.1",
	"publisher": "tane",
	"categories": [
		"Visualization"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Color picker",
			"properties": {
				"colorPicker.maxNumberOfColorsToDisplayPerDocument": {
					"scope": "resource",
					"type": "number",
					"default": -1,
					"description": "Displays maximum number of colors per document."
				},
				"colorPicker.colorCase": {
					"type": "string",
					"default": "Uppercase",
					"enum": [
						"Uppercase",
						"Lowercase"
					],
					"description": "The case for genrated hex color.",
					"enumDescriptions": [
						"Uppercase",
						"Lowercase"
					]
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"devDependencies": {
		"@types/node": "^12.12.0",
		"eslint": "^6.4.0",
		"@typescript-eslint/parser": "^2.3.0",
		"typescript": "^4.0.2",
		"vsce": "^1.80.0"
	},
	"dependencies": {
		"@kurkle/color": "^0.1.9"
	}
}
