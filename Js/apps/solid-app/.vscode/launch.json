{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "BlazorApp: Run Webpack Dev",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register/transpile-only",
                "-r",
                "tsconfig-paths/register",
                "--inspect"
            ],
            "cwd": "${workspaceFolder}",
            "args": ["webpack.dev.ts"],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [],
            "env": {
                "NODE_ENV": "development",
                "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json"
            }
        },
        {
            "name": "BlazorApp: Run Webpack Prod",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register/transpile-only",
                "-r",
                "tsconfig-paths/register",
                "--inspect"
            ],
            "args": ["webpack.prod.ts"],
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": ["node_modules/**"],
            "env": {
                "NODE_ENV": "production",
                "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json"
            }
        },
        {
            "name": ".NET Core Launch (BlazorApp)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/../../../Apps/BlazorApp/Server/bin/Debug/net6.0/BlazorApp.Server.dll",
            "args": [],
            "cwd": "${workspaceFolder}/../../../Apps/BlazorApp/Server",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {},
            "justMyCode": false,
            "requireExactSource": true,
            "launchBrowser": {
                "enabled": true
            }
        },
        {
            "name": "Launch and Debug Hosted BlazorWeb WebAssembly App",
            "type": "blazorwasm",
            "request": "launch",
            "hosted": true,
            "program": "${workspaceFolder}/../../../Apps/BlazorApp/Server/bin/Debug/net6.0/BlazorApp.Server.dll",
            "cwd": "${workspaceFolder}/../../../Apps/BlazorApp/Server",
            "url": "https://localhost:4001",
            "browser": "chrome",
            "trace": true
        }
    ]
}
