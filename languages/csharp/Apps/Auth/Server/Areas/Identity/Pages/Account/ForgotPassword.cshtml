@page
@model ForgotPasswordModel
@{
    ViewData[index: "Title"] = "Forgot your password?";
}

<div class="w-full h-full grid place-items-center">
    <form method="post" class="
            mdc-card
            flex flex-col items-center 
            px-10 pb-10
        ">
        <h2 class="text-primary text-center mt-10">@ViewData[index: "Title"]</h2>
        <h4 class="text-secondary text-center mt-5">Enter your email.</h4>
        <hr/>
        <div asp-validation-summary="ModelOnly" class="text-error"></div>
        <div class="mt-5">
            <label class="
            mdc-text-field mdc-text-field--filled
            w-64
            ">
                <span class="mdc-text-field__ripple"></span>
                <input asp-for="Input.Email" class="mdc-text-field__input" type="email" aria-labelledby="email">
                <span class="mdc-floating-label" id="email">Email</span>
                <span class="mdc-line-ripple"></span>
            </label>
            <div class="w-64">
                <span asp-validation-for="Input.Email" class="text-error"></span>
            </div>
        </div>
        <div class="mt-5">
            <button class="mdc-button mdc-button--raised">
                <div class="mdc-button__ripple"></div>
                <span type="submit" class="
                mdc-button__label
                ">Submit</span>
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}