<CascadingValue Value="this">
    @ChildContent
</CascadingValue>

@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    public string CurrentTheme { get; private set; } = "default-theme";

    public void SetTheme(string theme)
    {
        CurrentTheme = theme;
        StateHasChanged();
    }

}