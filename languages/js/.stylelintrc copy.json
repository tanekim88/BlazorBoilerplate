{
    "extends": "stylelint-config-standard",
    "plugins": [
        "stylelint-scss"
    ],
    "rules": {
        "color-no-invalid-hex": true,
        "color-hex-case": [
            "lower",
            {
                "message": "Lowercase the letters"
            }
        ],
        "indentation": [
            2,
            {
                "except": [
                    "block"
                ],
                "message": "Please use 2 spaces for indentation.",
                "severity": "warning"
            }
        ],
        "at-rule-no-unknown": null,
        "scss/at-rule-no-unknown": true
    }
}